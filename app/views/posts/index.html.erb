<h1>Home</h1>

<div>
    <%= link_to "new post", new_post_path %>
</div>

<ul>
    <% @posts.each do |post| %>
        <li>
            <h2>
                <%= post.title %>
            </h2>
            <p>
                <%= post.content %>
            </p>
            <span><small>
                    <%= post.created_at %>
                </small></span>

                <div class="btn-wrapper">
                    <%= button_to "Delete" , post_path(post), method: :delete, class:"btn" %>
                    <%= link_to "Edit", edit_post_path(post), class:"btn" %>

                </div>
        </li>
        <% end %>
</ul>